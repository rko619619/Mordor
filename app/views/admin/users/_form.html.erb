<% if @user.errors.any?%>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [ :admin,@user] do |f|%>
  <div class="form-check">
    <%= f.check_box :admin, class: 'form-check-input' %>
    <%= f.label t('admin.form.admin'), class:"form-check-label" %>
  </div>
  <div class="form-check">
    <%= f.check_box :ban, class: 'form-check-input' %>
    <%= f.label t('admin.form.ban'), class:"form-check-label" %>
  </div>

  <div class="form-group">
    <%= link_to t('common.back'), :back, class:'btn btn-outline-secondary'%>
    <%= f.submit t('application.create'), class:'btn btn-primary' %>
  </div>
<% end %>

