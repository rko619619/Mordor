<h1><%= t('admin.user.index.title') %></h1>

<section id="categories">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th><%= t('admin.user.index.email') %></th>
      <th><%= t('admin.user.index.valid') %></th>
      <th><%= "Настройки" %></th>
      <th><%= "Показать профиль" %></th>
      <th><%= 'Показать все cтатьи пользователя' %></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.email %></td>
      <td><%= user.admin %></td>
      <td>
        <%= link_to 'Назначить админом', edit_admin_user_path(user), class: 'btn btn-outline-primary btn-sm'%>
      </td>
      <td>
        <% @profiles.each do |profile| %>
          <% if profile.id == user.id %>
            <%= link_to 'Показать профиль', profile_path(user), class: 'btn btn-outline-primary btn-sm'%>
          <% else %>
          <% end %>
        <% end %>
      </td>
      <td>
      </td>
     </tr>

    <% end %>
  </table>
</section>