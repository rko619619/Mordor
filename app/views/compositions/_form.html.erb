<%= form_for @composition do |f| %>
  <div class="form-conrol">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-conrol">
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>

  <div class="form-conrol">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-conrol">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>